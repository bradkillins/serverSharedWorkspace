<header>
    <div class="head-title"><a href="/">Share a Workspace</a></div>
    <ul class="navLinks">
        <li><a href="/signup">Sign Up</a></li>
        <li><a class="activeLink" href="/login">Log In</a></li>
    </ul>
</header>
<main>
    <div class="splash"></div>
    <div class="content">

        <h1>Login To Your Account</h1>
        <div class="formContainer">
            <form id="login">
                <div class="formLine">
                    <label for="userEmail">Email: </label><input type="email" id="userEmail" name="userEmail" required
                        maxlength="100" />
                </div>
                <div class="formLine">
                    <label for="userPass">Password: </label><input type="password" id="userPass" name="userPass"
                        required minlength="8" maxlength="50" />
                </div>
                <div class="formLine">
                    <button type="submit" class="btn">Submit</button>
                </div>
            </form>
            <div class="formFeedback"></div>
        </div>

    </div>
</main>