<header>
    <div class="head-title"><a href="/">Share a Workspace</a></div>
    <ul class="navLinks">
        <li><a class="activeLink" href="/signup">Sign Up</a></li>
        <li><a href="/login">Log In</a></li>
    </ul>
</header>
<main>
    <div class="splash"></div>
    <div class="content">

        <h1>Create Your Account</h1>
        <div class="formContainer">
            <form id="signup">
                <div class="formLine">
                    <label for="fName">First Name: </label><input type="text" id="fName" name="fName" required
                        maxlength="100" />
                </div>
                <div class="formLine">
                    <label for="lName">Last Name: </label><input type="text" id="lName" name="lName" required
                        maxlength="100" />
                </div>
                <div class="formLine">
                    <label for="userPhone">Phone: </label><input type="text" id="userPhone" name="userPhone" required
                        maxlength="50" />
                </div>
                <div class="formLine">
                    <label for="userEmail">Email: </label><input type="email" id="userEmail" name="userEmail" required
                        maxlength="100" />
                </div>
                <div class="formLine">
                    <label for="userPass">Password: </label><input type="password" id="userPass" name="userPass"
                        required minlength="8" maxlength="50" />
                </div>
                <div class="formLine">
                    User Type:
                    <label for="owner">Owner
                        <input type="radio" class="radio" id="owner" name="userType" /></label>
                    <label for="coworker">Coworker
                        <input type="radio" class="radio" id="coworker" name="userType" checked /></label>
                </div>
                <div class="formLine">
                    <button type="submit" class="btn">Submit</button>
                </div>
            </form>
            <div class="formFeedback"></div>
        </div>

    </div>
</main>